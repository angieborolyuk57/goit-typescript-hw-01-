{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false, 
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true, 
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "es2020",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "target":"ES2019",
    "sourceMap": true
  },
  "include": ["**/*.ts"]
}

